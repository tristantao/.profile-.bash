#git stuff
alias gs='git status'
alias gb='git branch'

#rails stuff
base='/Users/t-rex-Box/Desktop/work/teamleada.com'
alias leada='cd $base; ll'
alias css="cd '$base/app/assets/stylesheets'; ll"
alias js="cd '$base/app/assets/javascripts'; ll"
