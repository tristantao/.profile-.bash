alias ....='cd ../../..; ll'
alias .....='cd ../../../..; ll'
alias ......='cd ../../../../..; ll'
alias .......='cd ../../../../../..; ll'
alias ........='cd ../../../../../../..; ll'
alias .........='cd ../../../../../../../..; ll'

